@{
    ViewData["Title"] = "Home Page";
}

@model List<LiftOff_Project.Models.Service>

<div class="text-center">
    <h1 class="display-4">Welcome Service Search!</h1>
    <p><a asp-controller="List" asp-action="Index">List Services</a>/></p>
    <p><a asp-controller="Search" asp-action="Index">Search Services</a></p>
</div>

@if (Model.Count == 0)
{
    <p>No services available.</p>
}
else
{
    <table class="table">
        <tr>
            <th>Service</th>
            <th>Provider</th>
        </tr>
        @foreach(Service service in Model)
        {
            <tr>
                <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@service.Id">@service.Name</a></td>
                <td>@service.Provider.Name</td>
            </tr>
        }
    </table>
}
